<%- include('../partials/header.ejs') %>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight No.</th>
                <th>Departure Date</th>
                <th>Details</th>
                <th>Status Update</th>
            </tr>
        </thead>
        <tbody>
            <% for(let i=0; i < flights.length; i++){%>
                <% if (i%2===0){%>
                    <tr class="even"">
                <% }else{ %>
                    <tr class=" odd"">
                        <% } %>
                            <td>
                                <%= flights[i].airline %>
                            </td>
                            <td>
                                <%= flights[i].airport %>
                            </td>
                            <td>
                                <%= flights[i].flightNo %>
                            </td>
                            <td>
                                <% const
                                    month=["January","February","March","April","May","June","July","August","September","October","November","December"];
                                    %>
                                    <%= month[flights[i].departs.getMonth()] %>
                                        <%= flights[i].departs.getDate() %>,
                                            <%= flights[i].departs.getFullYear() %>
                            </td>
                            <td><a href="/flights/<%= flights[i]._id %>"><button>Details</button></a></td>
                            <td>
                                <form method="POST" action="/flights/<%= flights[i]._id %>?_method=DELETE" class="delete-form">
                                    <button type="submit" class="goodbye">Cancel</button>
                                </form>
                            </td>
                    </tr>
                    <% } %>
        </tbody>
    </table>
    <%- include('../partials/footer.ejs') %>